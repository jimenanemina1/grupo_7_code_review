<!DOCTYPE html>
<html lang="en">

<!-- Head -->
<%- include("./partials/head.ejs") %>
    <link rel="stylesheet" href="/css/styles-shopping-cart.css">

    </head>
    <!-- Header -->
    <%- include("./partials/header.ejs") %>
    <main>
        <section class="container">
            <div class="container-img">
                <article>
                    <div class="img-product">
                        <img src=<%=items.imgPath%> alt="Cafetera" class="product_img">
                    </div>
                    <hr>
                    <div class="main-article">
                        <h1 class="nombre-producto"> <%=items.name%> </h1>
                    
                        <br>
                        <div class="price">
                            <p class="price">Precio $ <%=items.price%></p>
                            <br>
                            <div class="spinner"><button class="quantityMas">+</button>
                            <INPUT TYPE="NUMBER" MIN="0" MAX="100" STEP="1" VALUE="1" class="inputSpinner">
                            <button class="quantityMenos">-</button>
                            <button type="reset" name="borrar"><i class="fas fa-times-circle"></i></button> </div>
                            
                        </div>
                        <br>
                        <br>
                        <div class="pay">
                            <button>Pagar</button>
                        </div>
                        
                    </div>
                </article>
            </div>

            <br>
            <br>
            <div class="another-container">
                <div class="back-to-buy">
                    <a href="/">
                        <div class="buy">
                            <div class="icon-arrow">
                                <i class="fa-solid fa-arrow-left"></i>
                                Seguir comprando
                            </div>
                        </div>
                    </a>    
                </div>
                <br>
                <br>
                <div class="form">
                    <form method="post">
                        <label for="formulario">Notas adicionales</label>
                        <div class="textarea">
                            <textarea name="notas-adicionales" id="notas-adicionales" cols="30" rows="10"></textarea>
                        </div>
                    </form>
                </div>
            
            </div>
        </section>
    </main>
        <!-- Footer -->
        <%- include("./partials/footer.ejs") %>

            </body>

</html>